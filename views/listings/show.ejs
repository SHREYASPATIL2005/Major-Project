            <img id="mainModalImg" class="main-modal-img"
                 src="<%= (galleryImages && galleryImages[0] && galleryImages[0].url) ? galleryImages[0].url : '/images/no-image.png' %>"
                 alt="Property photo">
            <div class="photo-counter">
                <span id="currentPhoto">1</span> / <span id="totalPhotos"><%= (galleryImages && galleryImages.length) ? galleryImages.length : 1 %></span>
            </div>
        </div>

        <div class="photo-thumbnails-sidebar" role="navigation" aria-label="Photo thumbnails">
            <% if (galleryImages && galleryImages.length) { %>
                <% galleryImages.forEach(function(img, i) { %>
                    <div class="thumbnail-modal-item <%= i===0 ? 'active' : '' %>" onclick="showPhoto(<%= i %>)" role="button" tabindex="0">
                        <img class="thumbnail-modal-img" src="<%= img.url %>" alt="Photo <%= i+1 %>">
                    </div>
                <% }); %>
            <% } %>
        </div>
    </div>
</div>

<script>
    let currentPhotoIndex = 0;

    function openPhotoModal() {
        const modal = document.getElementById('photoModal');
        // use aria-hidden to control visibility (CSS handles display)
        modal.setAttribute('aria-hidden', 'false');
        document.body.style.overflow = 'hidden';
        // ensure totalPhotos reflects actual count
        document.getElementById('totalPhotos').textContent = (galleryImages && galleryImages.length) ? galleryImages.length : 1;
        // show requested photo if one was queued via showPhoto call
    }

    function closePhotoModal() {
        const modal = document.getElementById('photoModal');
        modal.setAttribute('aria-hidden', 'true');
        document.body.style.overflow = 'auto';
        // let browser finish hiding animation/layout then force map resize
        setTimeout(ensureMapRender, 200);
    }

    function showPhoto(index) {
        if (!galleryImages || galleryImages.length === 0) return;
        currentPhotoIndex = Math.max(0, Math.min(index, galleryImages.length - 1));
        const imgObj = galleryImages[currentPhotoIndex] || galleryImages[0];
        const mainImg = document.getElementById('mainModalImg');
        mainImg.src = imgObj.url;
        document.getElementById('currentPhoto').textContent = currentPhotoIndex + 1;

        const thumbnails = document.querySelectorAll('.thumbnail-modal-item');
        thumbnails.forEach(thumb => thumb.classList.remove('active'));
        if (thumbnails[currentPhotoIndex]) {
            thumbnails[currentPhotoIndex].classList.add('active');
            thumbnails[currentPhotoIndex].scrollIntoView({ behavior: 'smooth', block: 'nearest', inline: 'nearest' });
        }
    }

    // Keyboard navigation uses aria-hidden to check visibility
    document.addEventListener('keydown', function(event) {
        const modal = document.getElementById('photoModal');
        if (modal && modal.getAttribute('aria-hidden') === 'false') {
            if (event.key === 'Escape') {
                closePhotoModal();
            } else if (event.key === 'ArrowLeft' || event.key === 'ArrowUp') {
                event.preventDefault();
                const prevIndex = currentPhotoIndex > 0 ? currentPhotoIndex - 1 : (galleryImages.length - 1);
                showPhoto(prevIndex);
            } else if (event.key === 'ArrowRight' || event.key === 'ArrowDown') {
                event.preventDefault();
                const nextIndex = currentPhotoIndex < (galleryImages.length - 1) ? currentPhotoIndex + 1 : 0;
                showPhoto(nextIndex);
            }
        }
    });

    // Close modal when clicking outside (uses aria-hidden)
    window.addEventListener('click', function(event) {
        const modal = document.getElementById('photoModal');
        if (modal && modal.getAttribute('aria-hidden') === 'false' && event.target === modal) {
            closePhotoModal();
        }
    });

    // try to initialize or resize the map so tiles appear correctly
    function ensureMapRender() {
      // Try library-provided initializer if your map.js exposes one
      if (typeof initMap === 'function') {
        try { initMap(); } catch (e) { console.warn('initMap error', e); }
      }
      // Try common global map objects and call their resize methods
      try {
        if (window.map && typeof window.map.resize === 'function') {
          window.map.resize();
        } else if (window.myMap && typeof window.myMap.resize === 'function') {
          window.myMap.resize();
        } else if (window._map && typeof window._map.resize === 'function') {
          window._map.resize();
        }
      } catch (e) {
        console.warn('map resize failed', e);
      }
    }

    // run after full page load (give layout a moment to settle)
    window.addEventListener('load', function () {
      setTimeout(ensureMapRender, 300);
    });

    // also call once shortly after DOM ready (covers other init timing)
    setTimeout(ensureMapRender, 800);
</script>

