<% layout("/layouts/boilerplate") %>

<style>
    .listing-hero {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        padding: 2rem 0;
        margin-bottom: 2rem;
        border-radius: 0 0 2rem 2rem;
    }
    
    .listing-title {
        color: white;
        font-size: 2.5rem;
        font-weight: 700;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
        margin-bottom: 0;
    }
    
    .listing-card {
        border: none;
        border-radius: 2rem;
        box-shadow: 0 20px 40px rgba(0,0,0,0.1);
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        background: white;
    }
    
    .listing-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 25px 50px rgba(0,0,0,0.15);
    }
    
    .img-container {
        position: relative;
        overflow: hidden;
        height: 400px;
    }
    
    .show-img {
        height: 100%;
        width: 100%;
        object-fit: cover;
        transition: transform 0.3s ease;
    }
    
    .listing-card:hover .show-img {
        transform: scale(1.05);
    }
    
    .img-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(transparent 60%, rgba(0,0,0,0.3));
        pointer-events: none;
    }
    
    .card-body {
        padding: 2rem;
        background: white;
    }
    
    .owner-info {
        display: inline-flex;
        align-items: center;
        background: linear-gradient(135deg, #ff6b6b, #ee5a6f);
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 50px;
        font-size: 0.9rem;
        font-weight: 500;
        margin-bottom: 1rem;
        box-shadow: 0 4px 15px rgba(238, 90, 111, 0.3);
    }
    
    .owner-info i {
        margin-right: 0.5rem;
    }
    
    .listing-description {
        font-size: 1.1rem;
        line-height: 1.6;
        color: #555;
        margin-bottom: 1.5rem;
    }
    
    .price-tag {
        background: linear-gradient(135deg, #4ecdc4, #44a08d);
        color: white;
        padding: 1rem 1.5rem;
        border-radius: 1rem;
        font-size: 1.8rem;
        font-weight: 700;
        text-align: center;
        margin-bottom: 1rem;
        box-shadow: 0 8px 25px rgba(78, 205, 196, 0.3);
        display: inline-block;
    }
    
    .location-info {
        display: flex;
        align-items: center;
        background: #f8f9fa;
        padding: 1rem;
        border-radius: 1rem;
        margin-bottom: 0.5rem;
        border-left: 4px solid #007bff;
    }
    
    .location-info i {
        color: #007bff;
        margin-right: 1rem;
        font-size: 1.2rem;
    }
    
    .action-buttons {
        display: flex;
        gap: 1rem;
        margin: 2rem 0;
        justify-content: center;
    }
    
    .btn-modern {
        padding: 1rem 2rem;
        border-radius: 50px;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 1px;
        transition: all 0.3s ease;
        border: none;
        position: relative;
        overflow: hidden;
    }
    
    .btn-edit {
        background: linear-gradient(135deg, #ff9a9e, #fecfef);
        color: #333;
        box-shadow: 0 8px 25px rgba(255, 154, 158, 0.3);
    }
    
    .btn-edit:hover {
        transform: translateY(-3px);
        box-shadow: 0 12px 30px rgba(255, 154, 158, 0.4);
        color: #333;
    }
    
    .btn-delete {
        background: linear-gradient(135deg, #ff6b6b, #ee5a6f);
        color: white;
        box-shadow: 0 8px 25px rgba(255, 107, 107, 0.3);
    }
    
    .btn-delete:hover {
        transform: translateY(-3px);
        box-shadow: 0 12px 30px rgba(255, 107, 107, 0.4);
        color: white;
    }
    
    .review-section {
        background: #f8f9fa;
        border-radius: 2rem;
        padding: 2rem;
        margin: 2rem 0;
        box-shadow: 0 10px 30px rgba(0,0,0,0.05);
    }
    
    .review-header {
        color: #333;
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 2rem;
        text-align: center;
        position: relative;
    }
    
    .review-header::after {
        content: '';
        position: absolute;
        bottom: -10px;
        left: 50%;
        transform: translateX(-50%);
        width: 80px;
        height: 4px;
        background: linear-gradient(135deg, #667eea, #764ba2);
        border-radius: 2px;
    }
    
    .review-form {
        background: white;
        padding: 2rem;
        border-radius: 1.5rem;
        box-shadow: 0 10px 25px rgba(0,0,0,0.08);
        margin-bottom: 2rem;
    }
    
    .form-control {
        border-radius: 1rem;
        border: 2px solid #e9ecef;
        padding: 1rem;
        transition: all 0.3s ease;
    }
    
    .form-control:focus {
        border-color: #667eea;
        box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
    }
    
    .btn-submit {
        background: linear-gradient(135deg, #667eea, #764ba2);
        color: white;
        padding: 1rem 3rem;
        border-radius: 50px;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 1px;
        border: none;
        transition: all 0.3s ease;
        box-shadow: 0 8px 25px rgba(102, 126, 234, 0.3);
    }
    
    .btn-submit:hover {
        transform: translateY(-3px);
        box-shadow: 0 12px 30px rgba(102, 126, 234, 0.4);
        color: white;
    }
    
    .review-card {
        background: white;
        border: none;
        border-radius: 1.5rem;
        box-shadow: 0 10px 25px rgba(0,0,0,0.08);
        transition: transform 0.3s ease;
        overflow: hidden;
        margin-bottom: 1.5rem;
    }
    
    .review-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 35px rgba(0,0,0,0.12);
    }
    
    .review-card-body {
        padding: 1.5rem;
    }
    
    .review-author {
        color: #667eea;
        font-weight: 600;
        font-size: 1.1rem;
        margin-bottom: 0.5rem;
    }
    
    .review-comment {
        color: #666;
        line-height: 1.6;
        margin-bottom: 1rem;
    }
    
    .map-section {
        background: white;
        border-radius: 2rem;
        padding: 2rem;
        box-shadow: 0 10px 30px rgba(0,0,0,0.05);
        margin-bottom: 2rem;
    }
    
    .map-title {
        color: #333;
        font-size: 1.8rem;
        font-weight: 700;
        margin-bottom: 1.5rem;
        text-align: center;
    }
    
    #map {
        height: 400px;
        border-radius: 1rem;
        overflow: hidden;
        box-shadow: 0 10px 25px rgba(0,0,0,0.1);
    }
    
    .rating-section {
        background: linear-gradient(135deg, #ffecd2, #fcb69f);
        padding: 1.5rem;
        border-radius: 1rem;
        margin-bottom: 1.5rem;
    }
    
    .starability-slot {
        margin: 1rem 0;
    }
    
    .reviews-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 1.5rem;
        margin-top: 2rem;
    }
    
    .btn-delete-review {
        background: linear-gradient(135deg, #ff7675, #fd79a8);
        color: white;
        border: none;
        padding: 0.5rem 1rem;
        border-radius: 50px;
        font-size: 0.8rem;
        font-weight: 600;
        transition: all 0.3s ease;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }
    
    .btn-delete-review:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(255, 118, 117, 0.4);
        color: white;
    }
    
    @media (max-width: 768px) {
        .listing-title {
            font-size: 1.8rem;
        }
        
        .action-buttons {
            flex-direction: column;
            align-items: center;
        }
        
        .reviews-container {
            grid-template-columns: 1fr;
        }
        
        .price-tag {
            font-size: 1.4rem;
        }
    }
</style>

<script>
    const mapToken = "<%= process.env.MAP_TOKEN %>"
    const listing = <%- JSON.stringify (listing) %>;
</script>

<!-- Hero Section -->
<div class="listing-hero">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center">
                <h1 class="listing-title"><%= listing.title %></h1>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row justify-content-center">
        <!-- Main Listing Card -->
        <div class="col-lg-8 col-md-10">
            <div class="card listing-card">
                <div class="img-container">
                    <img src="<%= listing.image.url %>" class="show-img" alt="listing_image">
                    <div class="img-overlay"></div>
                </div>
                
                <div class="card-body">
                    <div class="owner-info">
                        <i class="fas fa-user"></i>
                        Hosted by <%= listing.owner.username %>
                    </div>
                    
                    <p class="listing-description">
                        <%= listing.description %>
                    </p>
                    
                    <div class="price-tag">
                        &#8377; <%= listing.price.toLocaleString("en-IN") %>
                    </div>
                    
                    <div class="location-info">
                        <i class="fas fa-map-marker-alt"></i>
                        <div>
                            <strong><%= listing.location %></strong><br>
                            <small class="text-muted"><%= listing.country %></small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Action Buttons -->
    <% if(currUser && listing.owner._id.equals(currUser._id)) {%>
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="action-buttons">
                <a href="/listings/<%= listing.id %>/edit" class="btn btn-modern btn-edit">
                    <i class="fas fa-edit"></i> Edit Listing
                </a>
                <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE" style="display: inline;">
                    <button class="btn btn-modern btn-delete">
                        <i class="fas fa-trash"></i> Delete Listing
                    </button>
                </form>
            </div>
        </div>
    </div>
    <% } %>

    <!-- Reviews Section -->
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="review-section">
                <% if(currUser) {%>
                <h4 class="review-header">Share Your Experience</h4>
                <div class="review-form">
                    <form action="/listings/<%= listing.id %>/reviews" method="POST" novalidate class="needs-validation">
                        <div class="rating-section">
                            <label for="rating" class="form-label"><strong>How was your stay?</strong></label>
                            <fieldset class="starability-slot">
                                <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                                <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                                <label for="first-rate1" title="Terrible">1 star</label>
                                <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                                <label for="first-rate2" title="Not good">2 stars</label>
                                <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                                <label for="first-rate3" title="Average">3 stars</label>
                                <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                                <label for="first-rate4" title="Very good">4 stars</label>
                                <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                                <label for="first-rate5" title="Amazing">5 stars</label>
                            </fieldset>
                        </div>
                        
                        <div class="mb-3">
                            <label for="comment" class="form-label"><strong>Tell us about your experience</strong></label>
                            <textarea name="review[comment]" id="comment" cols="30" rows="4" class="form-control" 
                                placeholder="Share your thoughts about this place..." required></textarea>
                            <div class="invalid-feedback">Please add some comments for review</div>
                        </div>
                        
                        <div class="text-center">
                            <button class="btn btn-submit">
                                <i class="fas fa-paper-plane"></i> Submit Review
                            </button>
                        </div>
                    </form>
                </div>
                <% } %>

                <!-- Display Reviews -->
                <% if(listing.reviews.length > 0) { %>
                <h4 class="review-header">What Guests Are Saying</h4>
                <div class="reviews-container">
                    <% for(review of listing.reviews) { %>
                    <div class="review-card">
                        <div class="review-card-body">
                            <h6 class="review-author">
                                <i class="fas fa-user-circle"></i> @<%= review.author.username %>
                            </h6>
                            <p class="starability-result" data-rating="<%= review.rating %>"></p>
                            <p class="review-comment"><%= review.comment %></p>
                            
                            <% if(currUser && (currUser._id.equals(review.author._id) || currUser._id.equals(listing.owner._id))) { %>
                            <form method="POST" action="/listings/<%= listing._id%>/reviews/<%= review._id %>?_method=DELETE">
                                <button class="btn btn-delete-review">
                                    <i class="fas fa-times"></i> Remove
                                </button>
                            </form>
                            <% } %>
                        </div>
                    </div>
                    <% } %>
                </div>
                <% } else { %>
                <div class="text-center">
                    <p class="text-muted"><em>No reviews yet. Be the first to share your experience!</em></p>
                </div>
                <% } %>
            </div>
        </div>
    </div>

    <!-- Map Section -->
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="map-section">
                <h3 class="map-title">
                    <i class="fas fa-map-marked-alt"></i> Discover the Location
                </h3>
                <div id="map"></div>
            </div>
        </div>
    </div>
</div>

<script src="/js/map.js"></script>