<div id="photoModal" class="photo-modal" aria-hidden="true">
    <!-- corrected class name to match defined CSS (.modal-content-photo) -->
    <div class="modal-content-photo">
        <span class="close-modal" onclick="closePhotoModal()" role="button" aria-label="Close">&times;</span>

