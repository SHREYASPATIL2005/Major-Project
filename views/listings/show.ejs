<!-- Hero Section -->
<div class="listing-hero">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center">
                <h1 class="listing-title"><%= listing.title %></h1>
                <p class="listing-subtitle"><%= listing.location %></p>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <!-- Photo Gallery Section -->
        <div class="col-12">
            <div class="photo-gallery-section">
                <div class="main-photo">
                    <img src="<%= listing.image.url %>" class="main-gallery-img" alt="Main listing image">
                    <div class="photo-overlay">
                        <button class="view-all-photos-btn" onclick="openPhotoModal()">
                            <i class="fas fa-images"></i> View All Photos
                        </button>
                    </div>
                </div>
                <div class="thumbnail-grid">
                    <div class="thumbnail-item">
                        <img src="<%= listing.image.url %>" class="thumbnail-img" alt="Property view 1">
                    </div>
                    <div class="thumbnail-item">
                        <img src="<%= listing.image.url %>" class="thumbnail-img" alt="Property view 2">
                    </div>
                    <div class="thumbnail-item">
                        <img src="<%= listing.image.url %>" class="thumbnail-img" alt="Property view 3">
                    </div>
                    <div class="thumbnail-item">
                        <img src="<%= listing.image.url %>" class="thumbnail-img" alt="Property view 4">
                    </div>
                    <div class="thumbnail-item more-photos">
                        <img src="<%= listing.image.url %>" class="thumbnail-img" alt="More photos">
                        <div class="more-photos-overlay" onclick="openPhotoModal()">
                            <span><i class="fas fa-plus"></i> 5+ More</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Main Listing Card -->
        <div class="col-lg-8 col-md-7">
            <div class="card listing-card">
                <div class="card-body">
                    <div class="owner-info">
                        <i class="fas fa-user"></i>
                        Hosted by <%= listing.owner.username %>
                    </div>
                    
                    <p class="listing-description">
                        <%= listing.description %>
                    </p>
                    
                    <div class="location-info">
                        <i class="fas fa-map-marker-alt"></i>
                        <div>
                            <strong><%= listing.location %></strong><br>
                            <small class="text-muted"><%= listing.country %></small>
                        </div>
                    </div>
                    <!-- Quick Facts and Property Features below location-info -->
                    <div class="row mt-3">
                        <div class="col-md-6">
                            <div class="quick-facts-card mb-3">
                                <h5><i class="fas fa-info-circle"></i> Quick Facts</h5>
                                <div class="fact-item">
                                    <i class="fas fa-user"></i>
                                    <span>Host: <%= listing.owner.username %></span>
                                </div>
                                <div class="fact-item">
                                    <i class="fas fa-map-marker-alt"></i>
                                    <span><%= listing.location %>, <%= listing.country %></span>
                                </div>
                                <div class="fact-item">
                                    <i class="fas fa-star"></i>
                                    <span>
                                        <% if(listing.reviews.length > 0) { %>
                                            <% let totalRating = 0; %>
                                            <% for(review of listing.reviews) { totalRating += review.rating; } %>
                                            <%= (totalRating / listing.reviews.length).toFixed(1) %> 
                                            (<%= listing.reviews.length %> reviews)
                                        <% } else { %>
                                            No reviews yet
                                        <% } %>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="features-card">
                                <h5><i class="fas fa-home"></i> Property Features</h5>
                                <div class="feature-item">
