        background: rgba(255, 255, 255, 0.5);
        border-radius: 3px;
    }
    
    .photo-thumbnails-sidebar::-webkit-scrollbar-thumb:hover {
        background: rgba(255, 255, 255, 0.7);
    }
    
    .thumbnail-modal-item {
        width: 100px;
        height: 75px;
        border-radius: 0.5rem;
        overflow: hidden;
        cursor: pointer;
        border: 2px solid transparent;
        transition: all 0.3s ease;
        flex-shrink: 0;
    }
    
    .thumbnail-modal-item:hover {
        border-color: rgba(255, 255, 255, 0.5);
    }
    
    .thumbnail-modal-item.active {
        border-color: #007bff;
        box-shadow: 0 0 10px rgba(0, 123, 255, 0.5);
    }
    
    .thumbnail-modal-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
    
    .close-modal {
        position: absolute;
        top: 1rem;
        right: 1rem;
        color: white;
        font-size: 2rem;
        font-weight: bold;
        cursor: pointer;
        z-index: 1001;
        background: rgba(0, 0, 0, 0.5);
        border-radius: 50%;
