<script>
    let currentPhotoIndex = 0;
    
    function openPhotoModal() {
        document.getElementById('photoModal').style.display = 'block';
        document.body.style.overflow = 'hidden';
        showPhoto(0, '<%= listing.image.url %>');
    }
    
    function closePhotoModal() {
        document.getElementById('photoModal').style.display = 'none';
        document.body.style.overflow = 'auto';
    }
    
    function showPhoto(index, imageUrl) {
        currentPhotoIndex = index;
        
        // Update main image
        const mainImg = document.getElementById('mainModalImg');
        mainImg.src = imageUrl;
        
        // Update counter
        document.getElementById('currentPhoto').textContent = index + 1;
        
        // Update active thumbnail
        const thumbnails = document.querySelectorAll('.thumbnail-modal-item');
        thumbnails.forEach(thumb => thumb.classList.remove('active'));
        thumbnails[index].classList.add('active');
        
        // Scroll to active thumbnail if needed
        thumbnails[index].scrollIntoView({ 
            behavior: 'smooth', 
            block: 'nearest',
            inline: 'nearest'
        });
    }
    
    // Keyboard navigation
    document.addEventListener('keydown', function(event) {
        const modal = document.getElementById('photoModal');
        if (modal.style.display === 'block') {
            if (event.key === 'Escape') {
                closePhotoModal();
            } else if (event.key === 'ArrowLeft' || event.key === 'ArrowUp') {
                event.preventDefault();
                const prevIndex = currentPhotoIndex > 0 ? currentPhotoIndex - 1 : 7;
                showPhoto(prevIndex, '<%= listing.image.url %>');
            } else if (event.key === 'ArrowRight' || event.key === 'ArrowDown') {
                event.preventDefault();
                const nextIndex = currentPhotoIndex < 7 ? currentPhotoIndex + 1 : 0;
                showPhoto(nextIndex, '<%= listing.image.url %>');
            }
        }
    });
    
    // Close modal when clicking outside
    window.onclick = function(event) {
        const modal = document.getElementById('photoModal');
        if (event.target === modal) {
            closePhotoModal();
        }
    }
</script>