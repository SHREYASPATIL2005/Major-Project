<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
  <div class="col-8 offset-2">
    <h3>Create a New Listing</h3>
    <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">

      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          name="listing[title]"
          placeholder="Enter Title"
          type="text"
          class="form-control"
          required
        >
        <div class="valid-feedback">Title Looks Good</div>
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          name="listing[description]"
          class="form-control"
          type="text"
          required
        ></textarea>
        <div class="invalid-feedback">Please enter a short description</div>
      </div>


      <div class="mb-3">
        <label for="image" class="form-label">Main Photo</label>
        <input
          name="listing[image]"
          type="file"
          class="form-control mb-2"
        >
        <input
          name="listing[imageUrl]"
          type="url"
          class="form-control"
          placeholder="Or paste an image URL"
        >
        <small class="form-text text-muted">Upload a file or paste an image URL for the main photo.</small>
      </div>

      <div class="mb-3">
        <label for="otherImages" class="form-label">Other Photos (up to 5)</label>
        <input
          name="listing[otherImages]"
          type="file"
          class="form-control mb-2"
          multiple
          accept="image/*"
          onchange="if(this.files.length>5){alert('You can only upload up to 5 images.'); this.value='';}"
        >
        <input
          name="listing[otherImageUrls]"
          type="text"
          class="form-control"
          placeholder="Paste up to 5 image URLs, separated by commas"
        >
        <small class="form-text text-muted">Upload files or paste image URLs (comma separated) for additional photos.</small>
      </div>

      <div class="mb-3">
        <label for="price" class="form-label">Price</label>
        <input
          name="listing[price]"
          placeholder="Enter Price"
          class="form-control"
          required
        >
        <div class="invalid-feedback">Enter a valid price</div>
      </div>

      <div class="mb-3">
        <label for="country" class="form-label">Country</label>
        <input
          name="listing[country]"
          placeholder="Enter country"
          type="text"
          class="form-control"
          required
        >
        <div class="invalid-feedback">Enter a valid Country name</div>
      </div>

      <div class="mb-3">
        <label for="category" class="form-label">Category</label>
        <select name="listing[category]" class="form-control">
          <option value="">-- Select --</option>
          <option value="trending">Trending</option>
          <option value="room">Room</option>
          <option value="iconic">Iconic Cities</option>
          <option value="views">Amazing Views</option>
          <option value="beach">Beach</option>
          <option value="pools">Amazing Pools</option>
          <option value="cabins">Cabins</option>
          <option value="arctic">Artics</option>
          <option value="farms">Farms</option>
        </select>
      </div>

      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input
          name="listing[location]"
          placeholder="Enter location"
          type="text"
          class="form-control"
          required
        >
        <div class="invalid-feedback">Enter a Location</div>
      </div>

      <button class="btn btn-dark mt-3 add-btn">Add</button>
    </form>
  </div>
</div>
