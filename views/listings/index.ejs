<%- layout("/layouts/boilerplate") %>

<style>
  #filters {
    display: flex;
    flex-wrap: wrap;
    gap: 2rem;
    margin: 1rem 0 2rem 0;
    padding-left: 2rem; /* aligned to listings */
    align-items: center;
  }

  .filter {
    text-align: center;
    opacity: 0.7;
  }

  .filter:hover {
    opacity: 1;
    cursor: pointer;
}

.listing-card {
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    border-radius: 1rem;
    overflow: hidden;
}

.listing-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0,0,0,0.1);
}

.card-img-top {
    height: 200px;
    object-fit: cover;
}

.listing-link {
    text-decoration: none;
    color: inherit;
}

.listing-link:hover {
    color: inherit;
}
  }

  .filter p {
    font-size: 0.8rem;
    margin-top: 0.2rem; /* Reduced vertical gap */
  }

  .listing-card {
    border-radius: 0.8rem;
    overflow: hidden;
    margin-bottom: 2rem;
    transform: scale(1.03); /* Slightly increased size */
  }

  .listing-card img {
    height: 18rem; /* Increased height */
    object-fit: cover;
    width: 100%;
  }

  .listings-container {
    padding-left: 2rem;
    padding-right: 2rem;
  }

  .tax-info {
    display: none;
  }


</style>

<!-- Filter Icons -->
<!-- Search box removed, now only navbar search is used -->
<div id="filters">
  <div class="filter">
    <div><i class="fa-solid fa-fire"></i></div>
    <p>Trending</p>
  </div>

  <div class="filter">
    <div><i class="fa-solid fa-bed"></i></div>
    <p>Room</p>
  </div>

  <div class="filter">
    <div><i class="fa-solid fa-mountain-city"></i></div>
    <p>Iconic Cities</p>
  </div>

  <div class="filter">
    <div><i class="fa-solid fa-mountain-sun"></i></div>
    <p>Amazing Views</p>
  </div>

  <div class="filter">
    <div><i class="fa-solid fa-umbrella-beach"></i></div>
    <p>Beach</p>
  </div>

  <div class="filter">
    <div><i class="fa-solid fa-person-swimming"></i></div>
    <p>Amazing Pools</p>
  </div>

  <div class="filter">
    <div><i class="fa-solid fa-house-user"></i></div>
    <p>Cabins</p>
  </div>

  <div class="filter">
    <div><i class="fa-solid fa-snowman"></i></i></div>
    <p>Artics</p>
  </div>

  <div class="filter">
    <div><i class="fa-solid fa-tractor"></i></i></div>
    <p>Farms</p>
  </div>

 

</div>

<!-- Listings -->
<div class="container-fluid listings-container">
  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <% for(let listing of allListings) { %>
      <a href="/listings/<%= listing._id %>" class="listing-link">
        <div class="card col listing-card">
          <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image">
          <div class="card-img-overlay"></div>
          <div class="card-body">
            <p class="card-text">
              <b><%= listing.title %></b><br>
              &#8377; <%= listing.price.toLocaleString("en-IN") %> / night
              <i class="tax-info">&nbsp;+18% GST</i>
            </p>
          </div>
        </div>
      </a>
    <% } %>
  </div>
</div>


 